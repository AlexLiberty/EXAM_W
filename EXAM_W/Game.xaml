<Window x:Class="EXAM_W.Game"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EXAM_W"
        mc:Ignorable="d"
        Title="Game" Height="450" Width="800">
    <Grid>

        <TextBox VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10 0 0 0" Width="50" Text="Player1"></TextBox>
        <TextBox VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0 0 50 0" Width="50" Text="Player2 "></TextBox>
        <TextBox VerticalAlignment="Top" HorizontalAlignment="Left" Name="Player1" Margin="65,0,0,0" Width="30" FontWeight="Bold"></TextBox>
        <TextBox VerticalAlignment="Top" HorizontalAlignment="Right" Name="Player2" Margin="0,0,20,0" Width="30" FontWeight="Bold"></TextBox>

        <Canvas Name="canvas" Margin="5,25,10,5" Background="#FF89E676">
            <Ellipse Name="ball" Width="30" Height="30" Fill="Red"/>
            <Rectangle Name="paddle1" Width="15" Height="100" Fill="Black"/>
            <Rectangle Name="paddle2" Width="15" Height="100" Fill="Black"/>
        </Canvas>
    </Grid>
</Window>
